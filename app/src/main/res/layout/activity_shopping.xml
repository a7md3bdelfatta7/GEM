<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="brainwaves.gem.ShoppingSystem.ShoppingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cardview_light_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="#c0c0c0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/defaultColor"
                android:layout_marginRight="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/cardview_light_background"
                    android:text="@string/shopping_Clothes"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:rotation="270"/>
            </LinearLayout>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/shop_women_iii"
                android:background="@color/cardview_light_background"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:onClick="clothesDetailsonClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="#c0c0c0">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_pharaoh_shop_i"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:onClick="artifactShopDetailsonClick"
                    android:background="@color/cardview_light_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/defaultColor"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/shopping_artifacts"
                    android:textColor="@color/cardview_light_background"
                    android:layout_marginRight="0dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:rotation="270"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="#c0c0c0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/defaultColor"
                android:layout_marginRight="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/cardview_light_background"
                    android:text="@string/shopping_Books"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:rotation="270"/>
                </LinearLayout>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/shop_book_ii"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:onClick="booksShopDetailsonClick"
                android:background="@color/cardview_light_background"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
