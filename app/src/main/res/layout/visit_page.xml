<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageColor1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/visit_i"
                android:background="@color/cardview_light_background"
                android:layout_weight="1"
                android:onClick="VisitDetailsonClick"
                android:id="@+id/visit_img_1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:onClick="VisitDetailsonClick"
                android:background="@color/cardview_light_background"
                android:textAlignment="viewStart"
                android:text="@string/main_hall" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/visit_ii"
                    android:layout_weight="1"
                    android:onClick="VisitDetailsonClick"
                    android:adjustViewBounds="true"
                    android:id="@+id/visit_img_2"
                    android:background="@color/cardview_light_background"
                    android:scaleType="centerInside"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/cardview_light_background"
                    android:textAlignment="viewStart"
                    android:onClick="VisitDetailsonClick"
                    android:textSize="12dp"
                    android:text="@string/second_hall"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/cardview_light_background">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/visit_iii"
                    android:onClick="VisitDetailsonClick"
                    android:background="@color/cardview_light_background"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:id="@+id/visit_img_3"
                    android:scaleType="centerInside"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:onClick="VisitDetailsonClick"
                    android:background="@color/cardview_light_background"
                    android:textAlignment="viewStart"
                    android:textSize="12dp"
                    android:text="@string/third_hall"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/visit_iv"
                    android:background="@color/cardview_light_background"
                    android:layout_weight="1"
                    android:onClick="VisitDetailsonClick"
                    android:adjustViewBounds="true"
                    android:id="@+id/visit_img_4"
                    android:scaleType="centerInside"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/cardview_light_background"
                    android:textAlignment="viewStart"
                    android:onClick="VisitDetailsonClick"
                    android:textSize="12dp"
                    android:text="@string/fourth_hall"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1">


            </LinearLayout>

        </LinearLayout>


        <ImageButton
            android:onClick="nextPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/visit_nextbutton"
            android:adjustViewBounds="true"
            android:background="@color/cardview_light_background"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

</ScrollView>