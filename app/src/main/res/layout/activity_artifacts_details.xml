<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="brainwaves.gem.HelperMenu.ArtifactsActivity"
    android:id="@+id/colltections_main_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="500dp"
                android:src="@drawable/highlight_i"
                android:adjustViewBounds="true"
                android:background="#000000"
                android:id="@+id/artifact_details"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:layout_alignParentRight="true"
                android:src="@drawable/add_button_i"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:onClick="onButtonShowPopupWindowClick"
                android:src="@drawable/logo_share"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:id="@+id/artifact_details_title"
            android:text="TUTANKAMUM\'S MASK"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/artifact_details_text"
            android:textSize="15dp"
            android:text="This mask of Tutankhamun is an example of the high est artistic and technical achievements of the an-cient Egyptians in the New Kingdom.
            \nCovering the head of the wrapped mummy in its coffin and activated by a magical spell, no.151b from the Book of the Dead, the mask ensured more pro-tection for the king's body.
            \nThe exact portrayal of the king's facial features achieved here made it possible for his soul to recog nize him and return to his mummified body, thus en uring his resurrection.
            \nhe head is covered by the royal headdress and the forehead bears the emblems of kingship and protec tion: the vulture and uraeus, or cobra.
            \nThe gold sheets used in this wonderful mask are joinec together by heating and hammering. The eyes are of obsidian and quartz and the eyebrows and eyelids are inlaid with lapis lazuli. The broad inlaid collar of semiprecious stones and colored glass ends in falcon heads.
            \n\nDimensions: Height 54 cm Width 39.3 cm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="@string/related_Links"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:text="VIDEOS"
            android:textColor="@color/cardview_light_background"
            android:background="@color/defaultColor"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:text="PHOTOS"
            android:textColor="@color/cardview_light_background"
            android:background="@color/defaultColor"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/cardview_light_background"
            android:background="@color/defaultColor"
            android:text="AUDIO"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/cardview_light_background"
            android:background="@color/defaultColor"
            android:text="CONNECTIONS"/>

    </LinearLayout>
</ScrollView>
