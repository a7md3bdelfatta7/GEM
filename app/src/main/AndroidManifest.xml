<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="brainwaves.gem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@drawable/gem"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:configChanges="locale|orientation"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChooseLangActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseUserType"
            android:theme="@style/AppTheme.NoActionBar">
            >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        <activity
            android:name=".RegisterationActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HelperMenu.QuizActivity"
            android:label="@string/title_activity_quiz" />
        <activity
            android:name=".HelperMenu.MembershipActivity"
            android:label="@string/title_activity_membership" />
        <activity
            android:name=".HelperMenu.CollectionsActivity"
            android:label="@string/title_activity_collections" />
        <activity
            android:name=".HelperMenu.VisitDetailsActivity"
            android:label="@string/title_activity_visit" />
        <activity
            android:name=".HelperMenu.ArtifactsActivity"
            android:label="@string/title_activity_artifactsDetails" />
        <activity
            android:name=".Map"
            android:label="@string/map_activity_title" />
        <activity
            android:name=".HelperMenu.Tour"
            android:label="@string/tour_activity_title" />
        <activity
            android:name=".ShoppingSystem.ShoppingActivity"
            android:label="@string/title_activity_shop" />
        <activity
            android:name=".ShoppingSystem.ClothesActivity"
            android:label="@string/title_activity_clothes" />
        <activity
            android:name=".ShoppingSystem.ArtifactsActivity"
            android:label="@string/title_activity_artifacts" />
        <activity
            android:name=".ShoppingSystem.BooksActivity"
            android:label="@string/title_activity_books" />
        <activity android:name=".ThemeActivity" />
        <activity
            android:name=".HelperMenu.ShoppingCheckoutActivity"
            android:label="@string/title_activity_checkout" />
        <activity android:name=".EventDetailsActivity" />
        <activity android:name=".HelperMenu.shoppingDetailsActivity" />

        <activity
            android:name=".HelperMenu.Favourites"
            android:label="@string/favourite_title" />
        <activity
            android:name=".HelperMenu.TourGuideActivity"
            android:label="@string/tour_guide_title"
            />
        <activity
            android:name=".HelperMenu.TourMap"
            android:label="@string/map_activity_title" />

        <activity
            android:name=".HelperMenu.Ticket"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HelperMenu.IndividualTourActivity"
            android:label="@string/individual_tour_title"
            />
        <activity
            android:name=".HelperMenu.GroupTourActivity"
            android:label="@string/group_tour_title"
            />
        <activity android:name=".HelperMenu.ViewTourActivity" />
        <activity android:name=".artifact_video"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
    </application>

</manifest>